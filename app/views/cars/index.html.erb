<p id="notice"><%= notice %></p>

<h1>Cars</h1><br>


<h2><strong>Search</strong></h2>
<%= form_tag(search_cars_url , method: "get") do %>
  <%= text_field_tag :search, nil, placeholder: "Search", class: "form-control mr-sm-2" %>
  <%= submit_tag "Search", class: "btn btn-light my-2 my-sm-0"%>
  <% end %>



<table>
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.Vin %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

